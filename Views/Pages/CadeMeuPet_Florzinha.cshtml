@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Site CCZ</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" type="text/css" media="screen" href="/../assets/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="/../assets/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css" />
    <link rel="stylesheet" href="/../assets/css/main.css" />
    <link rel="stylesheet" href="/../assets/css/adocao.css" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Oswald&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>

</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" asp-action="Index" asp-controller="Home"><img src="/../assets/img/logo.png"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-action="Blog" asp-controller="Home">BLOG</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="CadeMeuPet" asp-controller="Home">CADÊ MEU PET?</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Adocao" asp-controller="Home">ADOÇÃO</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="Denuncias" asp-controller="Home">DENÚNCIAS</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="QuemSomos" asp-controller="Home">QUEM SOMOS</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- DADOS GERAIS -->
    <section class="adocao-detalhes" style="background-color: #ece4b7;">
        <div class="container">
            <div class="row mb-5">
                <div class="col">
                    <h1 style="margin-top:60px; text-align:left;">Procura-se Florzinha</h1>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col">
                    <img style="width: 400px;" src="/../assets/img/exemplocard.jpg">
                </div>
                <div class="col">
                    <h6 style="text-align:left;"><b>DESCRIÇÃO</b></h6>
                    <p style="text-align:left;">Sed vehicula in neque eget bibendum.
                    Vestibulum non feugiat tellus. Pellentesque maximus lorem quis metus convallis pretium. </p>
                    <h6 style="text-align:left;"><b>CARACTERÍSTICAS</b></h6>
                    <dl>
                        <dd  style="text-align:left;">RAÇA:</dd>
                        <dd  style="text-align:left;">COR:</dd>
                        <dd  style="text-align:left;">SEXO:</dd>
                        <dd  style="text-align:left;">TAMANHO:</dd>
                        <dd  style="text-align:left;">ÚLTIMO LUGAR VISTO:</dd>
                    </dl>
                </div>
            </div>
        </div>
    </section>

    

    <!-- FORMULÁRIO -->
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <form>
                <br>
                <h3 style="text-align:left;">Entre em Contato</h3>
                <div class="form-group form-adocao">
                    <label for="text">Nome</label>
                    <input type="text" class="form-control" id="Nome" aria-describedby="nome">
                </div>
                <div class="form-group">
                    <label for="Email">Endereço de email</label>
                    <input type="email" class="form-control" id="Email" aria-describedby="email">
                </div>
                <div class="form-group">
                    <label for="text">Seu telefone</label>
                    <input type="text" class="form-control" id="telefone">
                </div>
                <div class="form-group">
                    <label for="Textarea">Sua mensagem</label>
                    <textarea class="form-control" id="Textarea" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-light" style="background:#fc9f5b">Enviar</button>
                </div>
            </form>
        </div>
    </div>
    <footer>
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 footer-about wow fadeInUp">
                        <img src="/../assets/img/logo.png" style="width: 150px">
                        <p>Centro de Controle de Zoonozes de Barra Bonita</p>
                    </div>
                    <div class="col-md-4 offset-md-1 footer-contact wow fadeInDown">
                        <h3>Contato</h3>
                        <p><i class="fas fa-map-marker-alt"></i> Via Rossini 10, 10136 Turin Italy</p>
                        <p><i class="fas fa-phone"></i> Telefone: (14)3641-XXXX</p>
                        <p><i class="fas fa-envelope"></i> Email: <a
                            href="mailto:hello@domain.com">hello@domain.com</a>
                        </p>
                    </div>
                    <div class="col-md-4 footer-links wow fadeInUp">
                        <div class="row">
                            <div class="col">
                                <h3>Links</h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <p><a class="scroll-link" asp-action="Index" asp-controller="Home">Home</a></p>
                                <p><a asp-action="Blog" asp-controller="Home">Blog do CCZ</a></p>
                                <p><a asp-action="CadeMeuPet" asp-controller="Home">Cadê meu Pet?</a></p>
                                <p><a asp-action="Adocao" asp-controller="Home">Adoção</a></p>
                                <p><a asp-action="Denuncias" asp-controller="Home">Denúncias</a></p>
                                <p><a asp-action="QuemSomos" asp-controller="Home">Quem somos</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <div vw class="enabled">
        <div vw-access-button class="active"></div>
        <div vw-plugin-wrapper>
          <div class="vw-plugin-top-wrapper"></div>
      </div>
  </div>
